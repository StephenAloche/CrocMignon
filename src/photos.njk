---
layout: base.njk
title: Photos
---
<script type="text/javascript"  src="/js/photo.js"></script>
<link rel="stylesheet"  href="/css/photo.css"/>
<script>
initComparisons();
</script>


<h1>Gallerie photos</h1>

<div class="flex toggle">
  <div class="flex-col">
      Chat
    <label class="switch">
      <input type="checkbox"  id="cb_chat" checked/>
      <span class="slider cat"></span>
    </label>
</div>

  <div class="flex-col">
    Chien
    <label class="switch">
      <input type="checkbox"  id="cb_chien" checked/>
      <span class="slider dog"></span>
    </label>
</div>

  <div class="flex-col">
      Avant-Apres
    <label class="switch">
      <input type="checkbox" id="cb_avantapres" checked/>
      <span class="slider both"></span>
    </label>
  </div>
</div>


<div class="sc-gallery">
<div id="galleryChat" class="placeholder">
  {% set chatImages = images | textIncludes("chat") %}
  {% for image in chatImages %}
    <img src="/images/{{ image }}" alt="Image">
  {% endfor %}
</div>

<div id="galleryChien"  class="placeholder">
  {% set chienImages = images | textIncludes("chien") %}
  {% for image in chienImages %}
    <img src="/images/{{ image }}" alt="Image">
  {% endfor %}
</div>

<div id="galleryAvantApres"  class="placeholder">
  {% set avap = images | textIncludes("avant-apres") %}
  {% for image in avap %}

    {% if loop.index is odd and loop.index < avap | length %}
      {% set beforeImage = image %}
      {% set afterImage = avap[loop.index] %}
      {% comparisonSlider "/images/"+beforeImage, "/images/"+afterImage %}
    {% endif %}
  {% endfor %} 

</div>

  </div>
